@page "/colecoes"
@using MinhasColecoes.Shared.ViewModels;
@using System.Net;
@inject HttpClient client;

<div class="row">
	<div class="col-12 col-md-6 col-lg-5 col-xl-4 mb-2 mb-md-0">
		<div class="d-flex">
			<form method="GET" class="input-group mb-3">
				<button class="btn btn-primary" type="submit" id="button-busca">Buscar</button>
				<input type="text" class="form-control form-control-sm" placeholder="Nome da coleção" aria-label="Nome da coleção" aria-describedby="button-busca" name="nome">
				<button class="btn btn-outline-secondary btn-sm" type="submit" asp-area="" asp-controller="Colecao" asp-action="Cadastro">Cadastrar</button>
			</form>
		</div>
	</div>
	<div class="col-12 col-md-6 col-lg-7 col-xl-8 mb-3 mb-md-0">
		<div class="d-flex flex-row-reverse justify-content-center justify-content-lg-start">
			<form class="d-inline-block">
				<select class="form-select form-select-sm">
					<option>25 por página</option>
					<option>50 por página</option>
					<option>100 por página</option>
					<option>200 por página</option>
				</select>
			</form>
			<nav class="d-inline-block me-3">
				<ul class="pagination pagination-sm">
					<li class="page-item">
						<a class="page-link" href="#" aria-label="Previous">
							<span aria-hidden="true">&laquo;</span>
						</a>
					</li>
					<li class="page-item"><a class="page-link" href="#">1</a></li>
					<li class="page-item"><a class="page-link" href="#">2</a></li>
					<li class="page-item"><a class="page-link" href="#">3</a></li>
					<li class="page-item"><a class="page-link" href="#">4</a></li>
					<li class="page-item"><a class="page-link" href="#">5</a></li>
					<li class="page-item">
						<a class="page-link" href="#" aria-label="Next">
							<span aria-hidden="true">&raquo;</span>
						</a>
					</li>
				</ul>
			</nav>
		</div>
	</div>
</div>

@if (colecoes == null)
{
	if (status == null)
	{
		<h3>Carregando...</h3>
	}
	else
	{
		@(status.ToString())
	}
}
else
{
	<CardTableColecao colecoes="colecoes" />
}

<div class="row mt-3">
	<div class="col-12 d-flex flex-row-reverse justify-content-center">
		<nav class="d-inline-block">
			<ul class="pagination">
				<li class="page-item">
					<a class="page-link" href="#" aria-label="Previous">
						<span aria-hidden="true">&laquo;</span>
					</a>
				</li>

				<li class="page-item"><a class="page-link" href="#">1</a></li>
				<li class="page-item"><a class="page-link" href="#">2</a></li>
				<li class="page-item"><a class="page-link" href="#">3</a></li>
				<li class="page-item"><a class="page-link" href="#">4</a></li>
				<li class="page-item"><a class="page-link" href="#">5</a></li>

				<li class="page-item">
					<a class="page-link" href="#" aria-label="Next">
						<span aria-hidden="true">&raquo;</span>
					</a>
				</li>
			</ul>
		</nav>
	</div>
</div>

@code {
	private List<ColecaoBasicVM> colecoes;
	private HttpStatusCode? status;
	async Task LoadColecoes()
	{
		try
		{
			HttpResponseMessage response = await client.GetAsync("Colecoes");

			status = response.StatusCode;
			if (response.IsSuccessStatusCode)
				colecoes = await client.GetFromJsonAsync<List<ColecaoBasicVM>>("Colecoes");
		}
		catch (Exception ex)
		{
			status = HttpStatusCode.InternalServerError;
		}
	}

	protected override async Task OnInitializedAsync()
	{
		await LoadColecoes();
	}
}
